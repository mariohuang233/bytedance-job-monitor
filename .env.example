# Flask配置
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# 服务器配置
HOST=0.0.0.0
PORT=8080

# 数据抓取配置
DATA_UPDATE_INTERVAL=7200  # 2小时，单位：秒
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# 缓存配置
CACHE_TIMEOUT=3600  # 1小时，单位：秒
DATA_DIR=/app/data

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log